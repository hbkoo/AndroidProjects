    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="教室"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/classroom_Sptinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:background="@drawable/editsharp"
            android:popupBackground="@drawable/editsharp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/material_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="器材"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/material_EditText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/material_TextView"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/editsharp"
            android:scrollbars="vertical"
            android:lines="6"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center">
        <Button
            android:id="@+id/submitFix_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/exitFix_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20dp"/>
    </LinearLayout>


</LinearLayout>
